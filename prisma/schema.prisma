generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- 用户系统 (适配 NextAuth.js) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]
  likes         Like[]
  tagVotes      UserTagVote[]
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// --- 博客核心功能 ---

// 文章动态数据
model PostStat {
  slug      String     @id @db.VarChar(191)
  views     Int        @default(0)
  comments  Comment[]
  likes     Like[]
  tags      PostTag[]
  viewLogs  PostView[]
}

// 评论系统
model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  postSlug  String
  post      PostStat @relation(fields: [postSlug], references: [slug], onDelete: Cascade)

  @@index([userId])
  @@index([postSlug])
}

// 点赞记录
model Like {
  id        String   @id @default(cuid())
  userId    String
  postSlug  String
  
  user      User     @relation(fields: [userId], references: [id])
  post      PostStat @relation(fields: [postSlug], references: [slug], onDelete: Cascade)

  @@unique([userId, postSlug])
  @@index([postSlug])
  @@index([userId])
}

// --- 标签系统 ---

model Tag {
  id    String    @id @default(cuid())
  name  String    @unique
  posts PostTag[]
}

// 文章与标签关联表
model PostTag {
  id        String   @id @default(cuid())
  postSlug  String
  tagId     String
  count     Int      @default(0)

  post      PostStat @relation(fields: [postSlug], references: [slug], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id])
  votes     UserTagVote[]

  @@unique([postSlug, tagId])
  @@index([tagId])
  @@index([postSlug])
}

// 用户标签投票记录
model UserTagVote {
  id        String   @id @default(cuid())
  userId    String
  postTagId String
  
  user      User     @relation(fields: [userId], references: [id])
  postTag   PostTag  @relation(fields: [postTagId], references: [id], onDelete: Cascade)

  @@unique([userId, postTagId])
  @@index([postTagId])
  @@index([userId])
}

// --- 浏览记录表 ---
model PostView {
  id        String   @id @default(cuid())
  postSlug  String
  ip        String   @db.VarChar(45)
  viewedAt  DateTime @default(now())

  post      PostStat @relation(fields: [postSlug], references: [slug], onDelete: Cascade)

  @@index([postSlug, ip, viewedAt])
}